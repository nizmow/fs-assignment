@model NumberToEnglishViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h2>Number to English</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="inputNumberToEnglish">Enter a number:</label>
        <input asp-for="Number" type="number" step="0.0000000000001" min="0.000000000001" max="999999999999" class="form-control" id="inputNumberToEnglish" />
        <span asp-validation-for="Number"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>    
</form>

@if (!string.IsNullOrEmpty((string)ViewData["Result"])) {
    <p>
        <div class="alert alert-success p-3" role="alert">
            <b>@ViewData["RequestedNumber"]</b> in English is <b>@ViewData["Result"]</b>'.
        </div>
    </p>
}

<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    
    input[type=number] {
      -moz-appearance: textfield;
    }
</style>
